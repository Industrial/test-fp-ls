  "version": "0.2.0",
  "configurations": [
    {
      "name": "API",
      "request": "launch",
      "type": "node",
      "program": "${workspaceFolder}/src/api/server.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-brk",
        "--allow-all"
      ],
      "args": [
        "."
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Web",
      "request": "launch",
      "type": "node",
      "program": "npm:vite",
      "cwd": "${workspaceFolder}/src/web",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect",
        "--allow-all",
        "--node-modules-dir"
      ],
      "args": [
        "."
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Debug tests",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}